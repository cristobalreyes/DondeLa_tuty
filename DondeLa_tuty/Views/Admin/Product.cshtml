@model IEnumerable<DondeLa_tuty.Models.Item>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
	<div class="card mb-3">
		<div class="card-header">
			<i class="fas fa-table"></i>
			Productos
			<a href="../Admin/CreateProduct" class="btn btn-info pull-right fa fa-plus">Agregar Producto Nuevo</a>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nombre Producto</th>
                            <th>imagen</th>
							<th>Accion</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							int count = 1;

                        <tr>
                            <td>@item.ItemId</td>
                            <td>@item.Titulo</td>
                            <td><center><img width="50" height="50" src="@Url.Action("convertirImagen", "Admin", new {ItemId = item.ItemId})" /></center></td>
                            <td> @Html.ActionLink("Editar Producto", "EditProduct", new { id = item.ItemId })</td>
                            <td> @Html.ActionLink("Eliminar Producto", "DeleteProduct", new { id = item.ItemId })</td>
                        </tr>
							count++;
						}

					</tbody>
				</table>
			</div>

		</div>
	</div>
</div>