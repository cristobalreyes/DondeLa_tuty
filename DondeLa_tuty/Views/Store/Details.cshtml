@model DondeLa_tuty.Models.Item

@{
    ViewBag.Title = "Details";
}

<h2>Item :@Model.Titulo</h2>
<p>
    <img alt="@Model.Titulo"
         src="@Model.ItemArtUrl" />
</p>
<div id="item-details">
    <p>
        <em>Category:</em>
        @Model.Category.Nombre
    </p>
    <p>
        <em>Producer:</em>
        @Model.Producer.Nombre
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}",
Model.Precio)
    </p>
    <p class="button1">
        @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = Model.ItemId }, "")
    </p>
    <div class="fb-comments" data-width="230" data-numposts="5"></div>
</div>


